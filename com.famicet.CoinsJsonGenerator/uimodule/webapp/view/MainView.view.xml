<mvc:View
	controllerName="com.famicet.CoinsJsonGenerator.controller.MainView"
	displayBlock="true"
	xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
>
	<App id="idAppControl">
		<pages>
			<Page title="{i18n>title}">
				<VBox
					width="100%"
					alignItems="Center"
				>
					<l:VerticalLayout class="sapUiContentPadding">
						<l:HorizontalLayout>
							<l:VerticalLayout>
								<l:HorizontalLayout class="sapUiContentPadding">
									<l:VerticalLayout class="sapUiContentPadding">
										<Label
											text="Name"
											labelFor="coinName"
										/>
										<Label
											text="Project Type"
											labelFor="projectType"
										/>
									</l:VerticalLayout>
									<l:VerticalLayout>
										<Input
											id="coinName"
											required="true"
										/>
										<Input
											id="projectType"
											required="true"
										/>
									</l:VerticalLayout>
									<l:VerticalLayout class="sapUiContentPadding">
										<Label
											text="Technical Name"
											labelFor="technicalName"
										/>
										<Label
											text="Is Halal"
											labelFor="isHalal"
										/>
									</l:VerticalLayout>
									<l:VerticalLayout>
										<Input
											id="technicalName"
											required="true"
										/>
										<Input
											id="isHalal"
											required="true"
										/>
									</l:VerticalLayout>
								</l:HorizontalLayout>
								<Label
									text="Description"
									labelFor="desc"
								/>
								<l:HorizontalLayout class="sapUiContentPadding">
									<TextArea
										id="desc"
										placeholder="Enter Text"
										growingMaxLines="7"
										width="800px"
										height="300px"
										required="true"
									/>
								</l:HorizontalLayout>
								<l:HorizontalLayout class="sapUiContentPadding">
									<Button text="Next"/>
									<Button text="Done"/>
								</l:HorizontalLayout>
							</l:VerticalLayout>
							<l:VerticalLayout>
								<Label
									text="Services"
									labelFor="services"
								/>
								<l:HorizontalLayout>
									<Input
										id="services"
										class="multiInput"
										required="true"
									/>
									<Button
										text="Add New"
										press="createNewServicePoint"
									/>
									<Button
										text="Remove Last point"
										press="removeServicePoint"
									/>
								</l:HorizontalLayout>
								<l:VerticalLayout id="servicesPoints"/>
								<Label
									text="Usages"
									labelFor="usages"
								/>
								<l:HorizontalLayout>
									<Input
										id="usages"
										class="multiInput"
										required="true"
									/>
									<Button
										text="Add New"
										press="createNewUsagePoint"
									/>
									<Button
										text="Remove Last point"
										press="removeUsagePoint"
									/>
								</l:HorizontalLayout>
								<l:VerticalLayout id="usagesPoints"/>
							</l:VerticalLayout>
						</l:HorizontalLayout>
					</l:VerticalLayout>
				</VBox>
			</Page>
		</pages>
	</App>
</mvc:View>