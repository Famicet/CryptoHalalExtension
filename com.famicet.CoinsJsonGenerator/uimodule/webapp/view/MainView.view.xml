<mvc:View
	controllerName="com.famicet.CoinsJsonGenerator.controller.MainView"
	displayBlock="true"
	xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
>
	<App id="idAppControl">
		<pages>
			<Page title="{i18n>title}">
				<VBox
					width="100%"
					alignItems="Center"
				>
					<l:VerticalLayout >
						<l:HorizontalLayout>
							<l:VerticalLayout>
								<l:HorizontalLayout class="sapUiContentPadding">
									<u:FileUploader
										id="fileUploader"
										name="myFileUpload"
										uploadUrl="upload/"
										tooltip="Upload your file to the local server"
										uploadComplete="handleUploadComplete"
									/>
									<Button
										text="Upload File"
										press="handleUploadPress"
									/>
									<Label
										text="Status: "
										id="status"
									/>
									<ToggleButton
										icon="sap-icon://world"
										press="changeLanguage"
									/>
									<Label
										text="English "
										id="language"
									/>
								</l:HorizontalLayout>
								<l:HorizontalLayout class="sapUiContentPadding">
									<l:VerticalLayout class="sapUiContentPadding">
										<Label
											text="Name"
											labelFor="coinName"
										/>
										<Label
											text="Project Type"
											labelFor="projectType"
										/>
									</l:VerticalLayout>
									<l:VerticalLayout>
										<Input
											id="coinName"
											required="true"
										/>
										<Input
											id="projectType"
											required="true"
										/>
									</l:VerticalLayout>
									<l:VerticalLayout class="sapUiContentPadding">
										<Label
											text="Technical Name"
											labelFor="technicalName"
										/>
										<Label
											text="Is Halal"
											labelFor="isHalal"
										/>
									</l:VerticalLayout>
									<l:VerticalLayout>
										<Input
											id="technicalName"
											required="true"
										/>
										<Input
											id="isHalal"
											required="true"
										/>
									</l:VerticalLayout>
								</l:HorizontalLayout>
								<l:VerticalLayout >
									<l:HorizontalLayout class="sapUiContentPadding">
										<Label
											text="Notes"
											labelFor="Note"
										/>
										<Input
											id="Note"
											required="true"
											width="600px"
										/>
									</l:HorizontalLayout>
									<Label
										text="Description"
										labelFor="desc"
									/>
									<l:HorizontalLayout class="sapUiContentPadding">
										<TextArea
											id="desc"
											placeholder="Enter Text"
											growingMaxLines="7"
											width="650px"
											height="300px"
											required="true"
										/>
									</l:HorizontalLayout>
								</l:VerticalLayout>
								<l:HorizontalLayout class="sapUiContentPadding">
									<Button
										text="Next"
										press="addCurrentDataSet"
									/>
									<Button
										text="Done"
										press="exportResult"
									/>
								</l:HorizontalLayout>
							</l:VerticalLayout>
							<l:VerticalLayout>
								<Label
									text="Services"
									labelFor="service"
								/>
								<l:HorizontalLayout>
									<Input
										id="service"
										class="multiInput"
										required="true"
									/>
									<Button
										text="Add New"
										press="createNewServicePoint"
									/>
									<Button
										text="Remove Last point"
										press="removeServicePoint"
									/>
								</l:HorizontalLayout>
								<l:VerticalLayout id="servicesPoints"/>
								<l:HorizontalLayout class="sapUiContentPadding">
								<Label
									text="Services Note Label"
									labelFor="servicesNoteLabel"
								/>
								<Input
										id="servicesNoteLabel"
										class="multiInput"
								/>
								</l:HorizontalLayout>
								<l:HorizontalLayout class="sapUiContentPadding">
								<Label
									text="Services Note"
									labelFor="servicesNote"
								/>
								<Input
										id="servicesNote"
										class="multiInput"
								/>
								</l:HorizontalLayout>
								<Label
									text="Usages"
									labelFor="usage"
								/>
								<l:HorizontalLayout>
									<Input
										id="usage"
										class="multiInput"
										required="true"
									/>
									<Button
										text="Add New"
										press="createNewUsagePoint"
									/>
									<Button
										text="Remove Last point"
										press="removeUsagePoint"
									/>
								</l:HorizontalLayout>
								<l:VerticalLayout id="usagesPoints"/>
								<l:HorizontalLayout class="sapUiContentPadding">
								<Label
									text="Usages Note Label"
									labelFor="usagesNoteLabel"
								/>
								<Input
										id="usagesNoteLabel"
										class="multiInput"
								/>
								</l:HorizontalLayout>
								<l:HorizontalLayout class="sapUiContentPadding">
								<Label
									text="usages Note"
									labelFor="usagesNote"
								/>
								<Input
										id="usagesNote"
										class="multiInput"
								/>
								</l:HorizontalLayout>
							</l:VerticalLayout>
						</l:HorizontalLayout>
					</l:VerticalLayout>
				</VBox>
			</Page>
		</pages>
	</App>
</mvc:View>